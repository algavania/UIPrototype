<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:id="@+id/layout_list"
    android:orientation="vertical"
    android:background="@color/dark_blue_700">

    <LinearLayout
        android:padding="@dimen/_20sdp"
        android:id="@+id/linear_layout_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@drawable/rounded_layout"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/mazda"
                android:id="@+id/img_car_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_20sdp">

            <TextView
                android:id="@+id/tv_carName_list"
                android:text="Mazda 3"
                android:textStyle="bold"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/layout_two_list"
                android:layout_below="@id/tv_carName_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_carLicense_list"
                    android:text="SMS1000Z"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9ssp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_carSeat_list"
                    android:text="5 Seater"
                    android:layout_toRightOf="@id/tv_carLicense_list"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_carDistance_list"
                    android:text="0.5KM Away"
                    android:textAllCaps="true"
                    android:paddingVertical="@dimen/_2sdp"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:textSize="@dimen/_6ssp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_carSeat_list"
                    android:background="@drawable/text_outlined"
                    android:textColor="@color/green"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/layout_two_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_rentalFeeText_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rental fee"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="@color/dark_blue_200"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_rentalFee_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fr. $3.00/hr"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_mileageFeeText_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mileage fee"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="@color/dark_blue_200"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_mileageFee_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.40/km"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>