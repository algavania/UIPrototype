<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.BookingsFragment"
    android:orientation="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_booking"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            app:cardElevation="0dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp">

                    <ImageView
                        android:id="@+id/img_location_card_booking"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_icoaddress" />

                    <TextView
                        android:id="@+id/tv_location_card_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toRightOf="@id/img_location_card_booking"
                        android:text="Location"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/tv_currentLocation_card_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_location_card_booking"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toRightOf="@id/img_location_card_booking"
                        android:text="Current Location"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_8sdp">

                        <ImageView
                            android:id="@+id/img_date_card_booking"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_icodated" />

                        <TextView
                            android:id="@+id/tv_date_card_booking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_toRightOf="@id/img_date_card_booking"
                            android:text="Date &amp; Time"
                            android:textSize="@dimen/_8ssp" />

                        <TextView
                            android:id="@+id/tv_currentDate_card_booking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_date_card_booking"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_toRightOf="@id/img_date_card_booking"
                            android:text="Now" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.01"
                        android:gravity="center_horizontal">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="#c0c0c0" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_8sdp">

                        <ImageView
                            android:id="@+id/img_duration_card_booking"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_icotime" />

                        <TextView
                            android:id="@+id/tv_duration_card_booking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_toRightOf="@id/img_duration_card_booking"
                            android:text="Duration"
                            android:textSize="@dimen/_8ssp" />

                        <TextView
                            android:id="@+id/tv_currentDuration_card_booking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_duration_card_booking"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_toRightOf="@id/img_duration_card_booking"
                            android:text="1 hr" />

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:background="@color/dark_blue_700">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_carFound_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300+ cars found"
                    android:textSize="@dimen/_13ssp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_filter_booking"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="Filter"
                    android:textAllCaps="false"
                    android:layout_toLeftOf="@id/btn_map_booking"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btn_map_booking"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="Map"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_blue_700">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/booking_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>